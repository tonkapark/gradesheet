<% javascript :defaults %>
<% stylesheet 'formtastic', 'styles/forms' %>

<div class='box'>
  <% semantic_form_for scale do |form| %>
    <%= form.error_messages %>
          
    <% form.inputs do %>
      <%= form.input :name, :label => 'Scale Name', :required => true %>
      <%= form.input :simple_view %>
      
      <h2 class="clear" >Grade Scale Ranges</h2>           
      <div id="scale_ranges">   
        
        <p class="add_link"><%= add_record_link form, :scale_ranges, 'Add a range' %></p>    
        <div class="scales">
          <% form.semantic_fields_for :scale_ranges do |scale_range_form| %>
            <%= render :partial => 'scale_range', :locals => { :f => scale_range_form } %>  
          <% end %>
        </div>
      </div>      
      
    <% end %>
    
    <% form.buttons do %>
      <%= form.commit_button 'Save' %> | <%= link_to 'Cancel', grading_scales_path %>
    <% end %>    

  <% end %>
</div>