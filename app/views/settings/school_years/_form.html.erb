<% javascript :defaults %>

<%= error_messages_for :grading_period, :header_message => "Please Try Again!", :message => "We had some problems saving your changes:" %>

<div class='box span-13'>
  <% form_for year do |f| %>
    <%= f.error_messages  %>

    <fieldset>
      <legend>School Year</legend>

      <%= f.label :name, "School Year Name", :class => 'req' %>
      <%= f.text_field :name %>
      <br />
      
      <div id="terms">
              <p class="add_link"><%= add_record_link f, :terms, 'Add a term' %></p>    
        <div class="terms">
          <% f.fields_for :terms do |term_form| %>      
            <%= render :partial => "term", :locals => { :f => term_form } %>
          <% end %>
        </div>            
      </div>


    </fieldset>

    <div class="spacer">
      <%= submit_tag button_name, :class => 'btn positive' %>
      <%= link_to 'Cancel', school_years_path(), :class => 'btn standard' %>
    </div>

  <% end %>
</div>