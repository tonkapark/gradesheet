<% content_for :sidebar do %>
  <%= render :partial => 'settings/settings_list' %>
<% end %>

  <table class="master">
    <tbody>
      <tr>
        <td colspan='0'>
          <%= link_to "New School Year", new_school_year_path, :class => 'btn positive' %>
        </td>
      </tr>
    </tbody>
  </table>

<% for year in @years %>
  <h2>
    <span style="float:right;"><%= button_to 'Delete',
        { :controller => :school_years, :action => "destroy", :id => year.id },
        :method   => :delete,
        :class    => "btn negative",
        :confirm => "Are you sure you want to delete the '#{year.name}' school year?" %></span>
      <%= link_to year.name, [:edit, year] %>
  </h2>

  <table class="master">
    <thead>
      <tr>
        <th>Period Name</th>
        <th>Begin Date</th>
        <th>End Date</th>
        <th>Active?</th>
      </tr>
    </thead>
    <tbody>
      <% for term in year.terms.sort {|a,b| a.end_date <=> b.end_date} %>
        <tr class="<%= cycle('odd', 'even')%>" onclick="location.href='<%= edit_school_year_path(year) %>'">
          <%= content_tag :td, link_to(term.name, edit_school_year_path(year)) %>
          <%= content_tag :td, term.begin_date %>
          <%= content_tag :td, term.end_date %>
          <%= content_tag :td, ( check_box_tag :active, term.active, term.active, :disabled => true ) %>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

