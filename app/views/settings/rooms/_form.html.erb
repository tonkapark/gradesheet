<% stylesheet 'formtastic', 'style/forms' %>

<% semantic_form_for [building,room] do |form| %>
  <%= form.error_messages %>
  <% form.inputs do %>
    <%= form.input :name, :required => true %>
    <%= form.input :seats, :required => true%>
  <% end %>
  
  <% form.buttons do %>
    <%= form.commit_button 'Save' %> | <%= link_to 'Cancel', buildings_path %>
  <% end %>
<% end %>
