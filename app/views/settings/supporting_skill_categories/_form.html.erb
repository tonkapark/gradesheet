<% javascript :defaults %>

<% form_for category do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
 
  <div id="supporting_skills">
    <p class="add_link"><%= add_record_link f, :supporting_skills, 'Add a skill' %></p>        
    <table>
      <thead>
        <th>Description</th>
        <th>Enable</th>
        <th width='1'></th>
      </thead>
      <tbody>
        <div class="supporting_skills">
          <% f.fields_for :supporting_skills do |skill_form| %>        
            <%= render :partial => 'supporting_skill', :locals => { :f => skill_form } %>
          <% end %>
        </div>          
      </tbody>
    </table>
  </div>      

  <p><%= f.submit "Submit" %> | <%= link_to "Cancel", category %></p>
<% end %>
