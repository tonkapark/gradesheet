<% content_for :sidebar do %>
	<%= render :partial => 'settings/settings_list' %>
<% end %>

<%= error_messages_for "term" %>

<div class='box span-13'>
  <% form_for @term do |f| %>
    <fieldset>
      <legend>Grading Period</legend>

      <%= f.label :school_year, {}, :class => 'req' %>
      <%= f.text_field :school_year %>
      <br />
	
      <%= f.label :name, {}, :class => 'req' %>
  		<%= f.text_field :name %>
      <br />

      <%= f.label :begin_date, {}, :class => 'req' %>
  		<%= f.date_select :begin_date %>
      <br />

      <%= f.label :end_date, {}, :class => 'req' %>
  		<%= f.date_select :end_date %>
      <br />
	
      <%= f.label :active %>
  		<%= f.check_box :active %>
      <br />
	
      <div class="spacer">
        <%= submit_tag 'Save Term', :class => 'btn positive' %>
        <%= link_to 'Cancel', terms_path(), :class => 'btn standard' %>
      </div>
    </fieldset>
  <% end %>
</div>

