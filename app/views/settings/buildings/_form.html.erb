<% stylesheet 'formtastic', 'style/forms' %>

<% semantic_form_for building do |form| %>
  <%= form.error_messages %>


  <% form.inputs do %>
    <%= form.input :site, :collection => sites %>
    <%= form.input :name, :label => 'Name', :required => true %>
  <% end %>
    
  <% form.buttons do %>
    <%= form.commit_button 'Save' %> | <%= link_to 'Cancel', buildings_path %>
  <% end %>
<% end %>
