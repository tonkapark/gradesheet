<% javascript :defaults %>

<% form_for topic do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
 
  <div id="objectives">
    <h3>Objectives</h3>
    <p class="add_link"><%= add_record_link f, :objectives, 'Add an objective' %></p>        
    <table>
      <thead>
        <th>Description</th>
        <th>Enable</th>
        <th width='1'></th>
      </thead>
      <tbody>
        <div class="objectives">
          <% f.fields_for :objectives do |objective_form| %>        
            <%= render :partial => 'objective', :locals => { :f => objective_form } %>
          <% end %>
        </div>          
      </tbody>
    </table>
  </div>      

  <p><%= f.submit "Submit" %> | <%= link_to "Cancel", topic %></p>
<% end %>
