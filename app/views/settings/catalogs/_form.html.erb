<% stylesheet 'formtastic', 'styles/forms' %>
<% javascript :defaults %>

<div class='box'>
  <% semantic_form_for catalog do |form| %>
    <%= form.error_messages  %>
    <% form.inputs do %>
      <%= form.input :name, :required => true %>
      <%= form.input :locked %>
      
      <div id="catalog_terms">
        <p class="add_link"><%= add_record_link form, :catalog_terms, 'Add a term' %></p>    
        <div class="catalog_terms">
          <% form.semantic_fields_for :catalog_terms do |term_form| %>      
            <%= render :partial => "catalog_term", :locals => { :f => term_form } %>
          <% end %>
        </div>            
      </div>      
    <% end %>

    <% form.buttons do %>
      <%= form.commit_button 'Save' %> | <%= link_to 'Cancel', catalogs_path %>
    <% end %>

  <% end %>
</div>