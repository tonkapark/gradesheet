<% content_for :left do %>
  <%= show_course_list %>
<% end %>

<%= error_messages_for :course, :header_message => "Please Try Again!", :message => "We had some problems saving your changes:" %>

<div class="box span-14">
  <% form_for (@course) do |f| %>
    <fieldset>
      <%= content_tag :legend, 'New Course' %>

      <%= f.label :code, "Course ID", :class => "req" %>
      <%= f.text_field :code, :class => "focus" %>
      <br />      
      <%= f.label :name, "Course Name", :class => "req" %>
      <%= f.text_field :name %>
      <br />
      <%= f.label :teacher, {}, :class => 'req' %>
      <%= collection_select :course, :teacher_id, @teachers, :id, :full_name, {:include_blank => true} %>
      <br />      
      <%= f.label :school_year, {}, :class => 'req' %>
      <%= collection_select :school_year, :id, @school_years, :id, :name %>
      <br />
      <%= f.label :grading_scale_id, {}, :class => 'req' %>
      <%= collection_select :course, :grading_scale_id, @grade_scales, :id, :name %>

      <div class="spacer">
        <%= f.submit 'Create', :class=> 'btn positive' %>
        <%= link_to 'Cancel', {:action=> 'index', :controller=> 'courses'}, :class => 'btn positive' %>
      </div>
    </fieldset>
  <% end %>
</div>
