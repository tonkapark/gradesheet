<% stylesheet 'formtastic', 'styles/forms' %>

<div class="box">
  <% semantic_form_for course do |form| %>
    <%= form.error_messages %>
          
    <% form.inputs do %>
      <% if form.object.new_record? %>
        <%= form.input :code, :required => true, :input_html => {:class => "focus"} %>
      <% else %>
        <%= form.input :code, :input_html => {:disabled => 'disabled'} %>
      <% end %>
      <%= form.input :name, :label => 'Course Name', :required => true %>
   
      
    <% end %>
    
    
    
    
    <% form.buttons do %>
      <%= form.commit_button 'Save' %> | <%= link_to 'Cancel', course %>
    <% end %>

  <% end %>
</div>