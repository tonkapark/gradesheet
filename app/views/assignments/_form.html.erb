<% stylesheet 'styles/jquery-ui-1.7.2.custom', 'formtastic', 'styles/forms' %>
<% javascript 'http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js', 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js' %>


<h3><%= assignment.name? ? "Editing: #{assignment.name}" : "New Assignment" %></h3>

<% form.inputs do %>
  <%= form.input :assignment_category, :required => true, :for => :assignment_categories %>
  <%= form.input :name, :label => 'Name', :required => true %>
  <%= form.input :possible_points, :label => 'Possible points', :required => true %>
  <%= form.input :due_date, :as => :string, :required => true, :input_html => {:class => 'datepicker'}%>
    
<% end %>

<% form.buttons do %>
  <%= form.commit_button 'Save' %> | <%= link_to 'Cancel', @course_term %>
<% end %>


<% content_for :head do %>


  <% javascript_tag do %>
  
	$(function() {
		$('.datepicker').datepicker({
			numberOfMonths: 3,
			showButtonPanel: true
		});
	});
  
  <% end %>
<% end %>
