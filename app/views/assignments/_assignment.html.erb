  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= assignment.course_term.code %></td>
    <%= content_tag :td, assignment.course_term.teacher.full_name unless current_user.person.class.name == 'Teacher' %>
    <td><%= link_to_unless current_user.person.class.name == 'Student', assignment.name, assignment %></td>        
    <td><%= assignment.assignment_category.name %></td>
    <td><%= assignment.due_date_formatted %></td>
    <td><%= assignment.possible_points %></td>          
  </tr>