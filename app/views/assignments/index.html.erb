
<div class="span-14">
  <h2>All Assignments</h2>
  <div id='assignment_list'>
    <table id='assignments' class='master'>
      <thead>
        <tr>
          <th>Assignment</th>
          <th>Type</th>
          <th>Due Date</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>
      <% @assignments.each do |a| %>
        <tr onclick="location.href='<%= assignment_url(a) %>'">
          <td><%= link_to a.name, a %></td>        
          <td><%= a.assignment_category.name %></td>
          <td><%= a.due_date_formatted %></td>
          <td><%= a.possible_points %></td>          
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <% will_paginate @assignments %>
</div>

